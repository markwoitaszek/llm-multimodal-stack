# n8n Workflow Management Environment Template
# This template contains environment variables for the n8n service

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
N8N_PORT={{ n8n_port | default('5678') }}
N8N_HOST={{ n8n_host | default('localhost') }}
N8N_PROTOCOL={{ n8n_protocol | default('https') }}
N8N_WEBHOOK_URL={{ n8n_webhook_url | default('https://localhost:5678') }}

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
N8N_BASIC_AUTH_ACTIVE={{ n8n_basic_auth_active | default('true') }}
N8N_BASIC_AUTH_USER={{ n8n_basic_auth_user | default('admin') }}
N8N_BASIC_AUTH_PASSWORD={{ vault_n8n_password | default('changeme_in_production') }}

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
N8N_ENCRYPTION_KEY={{ vault_n8n_encryption_key | default('changeme_in_production') }}

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
N8N_METRICS={{ n8n_metrics | default('true') }}
N8N_LOG_LEVEL={{ n8n_log_level | default('info') }}
N8N_RUNNERS_ENABLED={{ n8n_runners_enabled | default('true') }}
DB_SQLITE_POOL_SIZE={{ db_sqlite_pool_size | default('5') }}

# =============================================================================
# FEATURE CONFIGURATION
# =============================================================================
N8N_BLOCK_ENV_ACCESS_IN_NODE={{ n8n_block_env_access_in_node | default('false') }}
N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS={{ n8n_enforce_settings_file_permissions | default('true') }}

# =============================================================================
# TIMEZONE AND LOCALIZATION
# =============================================================================
GENERIC_TIMEZONE={{ generic_timezone | default('UTC') }}

# =============================================================================
# EXTERNAL INTEGRATION
# =============================================================================
N8N_URL={{ n8n_url | default('http://n8n:5678') }}
N8N_API_KEY={{ vault_n8n_api_key | default('') }}