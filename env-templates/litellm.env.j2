# LiteLLM Proxy Environment Template
# This template contains environment variables for the LiteLLM proxy service

# =============================================================================
# LITELLM CONFIGURATION
# =============================================================================
LITELLM_PORT={{ litellm_port | default('4000') }}
LITELLM_MASTER_KEY={{ vault_litellm_master_key | default('changeme_in_production') }}
LITELLM_SALT_KEY={{ vault_litellm_salt_key | default('changeme_in_production') }}
LITELLM_NUM_WORKERS={{ litellm_num_workers | default('1') }}

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Uses core database configuration from core.env.j2
POSTGRES_DB={{ postgres_db | default('multimodal') }}
POSTGRES_USER={{ postgres_user | default('postgres') }}
POSTGRES_PASSWORD={{ vault_postgres_password | default('changeme_in_production') }}
POSTGRES_HOST={{ postgres_host | default('postgres') }}
POSTGRES_PORT={{ postgres_port | default('5432') }}

# =============================================================================
# RATE LIMITING AND PERFORMANCE
# =============================================================================
LITELLM_MAX_REQUESTS_PER_MINUTE={{ litellm_max_requests_per_minute | default('60') }}
LITELLM_MAX_TOKENS_PER_MINUTE={{ litellm_max_tokens_per_minute | default('10000') }}
LITELLM_REQUEST_TIMEOUT={{ litellm_request_timeout | default('30') }}

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LITELLM_LOG_LEVEL={{ litellm_log_level | default('INFO') }}
LITELLM_ENABLE_METRICS={{ litellm_enable_metrics | default('true') }}
LITELLM_METRICS_PORT={{ litellm_metrics_port | default('4001') }}