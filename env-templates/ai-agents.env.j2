# AI Agents Service Environment Template
# This template contains environment variables for the AI agents service

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
AI_AGENTS_PORT={{ ai_agents_port | default('8003') }}
AI_AGENTS_URL={{ ai_agents_url | default('http://ai-agents:8003') }}

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Uses core database configuration from core.env.j2
POSTGRES_HOST={{ postgres_host | default('postgres') }}
POSTGRES_PORT={{ postgres_port | default('5432') }}
POSTGRES_DB={{ postgres_db | default('multimodal') }}
POSTGRES_USER={{ postgres_user | default('postgres') }}
POSTGRES_PASSWORD={{ vault_postgres_password | default('changeme_in_production') }}

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
QDRANT_HOST={{ qdrant_host | default('qdrant') }}
QDRANT_PORT={{ qdrant_http_port | default('6333') }}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST={{ redis_host | default('redis') }}
REDIS_PORT={{ redis_port | default('6379') }}
REDIS_DB={{ redis_db_ai_agents | default('2') }}

# =============================================================================
# SERVICE INTEGRATION
# =============================================================================
LLM_BASE_URL={{ llm_base_url | default('http://vllm:8000/v1') }}
LLM_MODEL={{ vllm_model | default('microsoft/DialoGPT-medium') }}
MULTIMODAL_WORKER_URL={{ multimodal_worker_url | default('http://multimodal-worker:8001') }}
RETRIEVAL_PROXY_URL={{ retrieval_proxy_url | default('http://multimodal-retrieval-proxy:8002') }}
SEARCH_ENGINE_URL={{ search_engine_url | default('http://search-engine:8004') }}
MEMORY_SYSTEM_URL={{ memory_system_url | default('http://memory-system:8005') }}
USER_MANAGEMENT_URL={{ user_management_url | default('http://user-management:8006') }}

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
AGENT_MAX_CONCURRENT_TASKS={{ agent_max_concurrent_tasks | default('5') }}
AGENT_TASK_TIMEOUT={{ agent_task_timeout | default('300') }}
AGENT_MEMORY_RETENTION_DAYS={{ agent_memory_retention_days | default('30') }}

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL_AGENT_MEMORY={{ cache_ttl_agent_memory | default('2592000') }}
CACHE_TTL_AGENT_RESPONSES={{ cache_ttl_agent_responses | default('3600') }}