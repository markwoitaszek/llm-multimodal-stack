# User Management Service Environment Template
# This template contains environment variables for the user management service

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
USER_MANAGEMENT_PORT={{ user_management_port | default('8006') }}
USER_MANAGEMENT_URL={{ user_management_url | default('http://user-management:8006') }}

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Uses core database configuration from core.env.j2
POSTGRES_HOST={{ postgres_host | default('postgres') }}
POSTGRES_PORT={{ postgres_port | default('5432') }}
POSTGRES_DB={{ postgres_db | default('multimodal') }}
POSTGRES_USER={{ postgres_user | default('postgres') }}
POSTGRES_PASSWORD={{ vault_postgres_password | default('changeme_in_production') }}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST={{ redis_host | default('redis') }}
REDIS_PORT={{ redis_port | default('6379') }}
REDIS_DB={{ redis_db_user_management | default('5') }}

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET_KEY={{ vault_jwt_secret_key | default('changeme_in_production') }}
JWT_ALGORITHM={{ jwt_algorithm | default('HS256') }}
JWT_EXPIRATION_HOURS={{ jwt_expiration_hours | default('24') }}
JWT_REFRESH_EXPIRATION_DAYS={{ jwt_refresh_expiration_days | default('30') }}

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
AUTH_MAX_LOGIN_ATTEMPTS={{ auth_max_login_attempts | default('5') }}
AUTH_LOCKOUT_DURATION_MINUTES={{ auth_lockout_duration_minutes | default('15') }}
AUTH_PASSWORD_MIN_LENGTH={{ auth_password_min_length | default('8') }}
AUTH_REQUIRE_EMAIL_VERIFICATION={{ auth_require_email_verification | default('false') }}

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_TIMEOUT_MINUTES={{ session_timeout_minutes | default('60') }}
SESSION_MAX_CONCURRENT={{ session_max_concurrent | default('3') }}

# =============================================================================
# DEBUG AND DEVELOPMENT
# =============================================================================
DEBUG={{ debug | default('false') }}