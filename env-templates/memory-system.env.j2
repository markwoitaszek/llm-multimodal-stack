# Memory System Service Environment Template
# This template contains environment variables for the memory system service

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
MEMORY_SYSTEM_PORT={{ memory_system_port | default('8005') }}
MEMORY_SYSTEM_URL={{ memory_system_url | default('http://memory-system:8005') }}

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Uses core database configuration from core.env.j2
POSTGRES_HOST={{ postgres_host | default('postgres') }}
POSTGRES_PORT={{ postgres_port | default('5432') }}
POSTGRES_DB={{ postgres_db | default('multimodal') }}
POSTGRES_USER={{ postgres_user | default('postgres') }}
POSTGRES_PASSWORD={{ vault_postgres_password | default('changeme_in_production') }}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST={{ redis_host | default('redis') }}
REDIS_PORT={{ redis_port | default('6379') }}
REDIS_DB={{ redis_db_memory_system | default('4') }}

# =============================================================================
# MEMORY CONFIGURATION
# =============================================================================
MEMORY_MAX_ENTRIES_PER_USER={{ memory_max_entries_per_user | default('10000') }}
MEMORY_COMPRESSION_ENABLED={{ memory_compression_enabled | default('true') }}
MEMORY_ENCRYPTION_ENABLED={{ memory_encryption_enabled | default('true') }}

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL_AGENT_MEMORY={{ cache_ttl_agent_memory | default('2592000') }}
CACHE_TTL_MEMORY_SEARCH={{ cache_ttl_memory_search | default('3600') }}

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MEMORY_BATCH_SIZE={{ memory_batch_size | default('100') }}
MEMORY_INDEX_INTERVAL={{ memory_index_interval | default('3600') }}
MEMORY_CLEANUP_INTERVAL={{ memory_cleanup_interval | default('86400') }}