# OpenWebUI Environment Template
# This template contains environment variables for the OpenWebUI service

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
OPENWEBUI_PORT={{ openwebui_port | default('3030') }}

# =============================================================================
# API CONFIGURATION
# =============================================================================
OPENAI_API_BASE_URL={{ openai_api_base_url | default('http://vllm:8000/v1') }}
OPENAI_API_KEY={{ vault_vllm_api_key | default('changeme_in_production') }}

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
WEBUI_SECRET_KEY={{ vault_webui_secret_key | default('changeme_in_production') }}

# =============================================================================
# UI CONFIGURATION
# =============================================================================
WEBUI_TITLE={{ webui_title | default('Multimodal LLM Stack') }}
WEBUI_DESCRIPTION={{ webui_description | default('Advanced AI Assistant Platform') }}
WEBUI_ENABLE_REGISTRATION={{ webui_enable_registration | default('true') }}
WEBUI_ENABLE_SHARING={{ webui_enable_sharing | default('false') }}

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WEBUI_MAX_UPLOAD_SIZE={{ webui_max_upload_size | default('100') }}
WEBUI_MAX_CONVERSATIONS={{ webui_max_conversations | default('1000') }}
WEBUI_CLEANUP_INTERVAL={{ webui_cleanup_interval | default('86400') }}