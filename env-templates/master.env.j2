# Master Environment Template for Multimodal LLM Stack
# This template combines all service environment variables
# Use this for complete deployments or as a reference for individual service templates

# =============================================================================
# CORE SERVICES CONFIGURATION
# =============================================================================
# Include core services configuration
{% include 'core.env.j2' %}

# =============================================================================
# INFERENCE SERVICES CONFIGURATION
# =============================================================================
# Include vLLM configuration
{% include 'vllm.env.j2' %}

# Include LiteLLM configuration
{% include 'litellm.env.j2' %}

# =============================================================================
# MULTIMODAL SERVICES CONFIGURATION
# =============================================================================
# Include multimodal worker configuration
{% include 'multimodal-worker.env.j2' %}

# Include retrieval proxy configuration
{% include 'retrieval-proxy.env.j2' %}

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# Include AI agents configuration
{% include 'ai-agents.env.j2' %}

# Include memory system configuration
{% include 'memory-system.env.j2' %}

# Include search engine configuration
{% include 'search-engine.env.j2' %}

# Include user management configuration
{% include 'user-management.env.j2' %}

# =============================================================================
# MONITORING AND UI SERVICES CONFIGURATION
# =============================================================================
# Include OpenWebUI configuration
{% include 'openwebui.env.j2' %}

# Include n8n configuration
{% include 'n8n.env.j2' %}

# Include n8n monitoring configuration
{% include 'n8n-monitoring.env.j2' %}

# =============================================================================
# ADDITIONAL SERVICE URLS (for service discovery)
# =============================================================================
# Service URLs for internal communication
MULTIMODAL_WORKER_URL={{ multimodal_worker_url | default('http://multimodal-worker:8001') }}
RETRIEVAL_PROXY_URL={{ retrieval_proxy_url | default('http://multimodal-retrieval-proxy:8002') }}
SEARCH_ENGINE_URL={{ search_engine_url | default('http://search-engine:8004') }}
MEMORY_SYSTEM_URL={{ memory_system_url | default('http://memory-system:8005') }}
USER_MANAGEMENT_URL={{ user_management_url | default('http://user-management:8006') }}
LLM_BASE_URL={{ llm_base_url | default('http://vllm:8000/v1') }}
OPENAI_API_BASE_URL={{ openai_api_base_url | default('http://vllm:8000/v1') }}
AI_AGENTS_URL={{ ai_agents_url | default('http://ai-agents:8003') }}
IDE_BRIDGE_URL={{ ide_bridge_url | default('http://ide-bridge:8007') }}
N8N_URL={{ n8n_url | default('http://n8n:5678') }}
N8N_WEBHOOK_URL={{ n8n_webhook_url | default('http://localhost:5678') }}
IDE_BRIDGE_WEB_URL={{ ide_bridge_web_url | default('http://localhost:8007') }}
IDE_BRIDGE_WS_URL={{ ide_bridge_ws_url | default('ws://localhost:8007/ws') }}
N8N_MONITORING_DASHBOARD_URL={{ n8n_monitoring_dashboard_url | default('http://localhost:8008') }}
N8N_MONITORING_WS_URL={{ n8n_monitoring_ws_url | default('ws://localhost:8008/ws') }}

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_INTERVAL={{ health_check_interval | default('30s') }}
HEALTH_CHECK_TIMEOUT={{ health_check_timeout | default('10s') }}
HEALTH_CHECK_RETRIES={{ health_check_retries | default('3') }}
HEALTH_CHECK_START_PERIOD={{ health_check_start_period | default('30s') }}

